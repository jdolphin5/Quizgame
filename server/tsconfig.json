{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist", // Output directory for transpiled JavaScript files
    "rootDir": "src", // Directory containing the TypeScript files
    "esModuleInterop": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts" // Include all TypeScript files in the 'src' directory and its subdirectories
  ]
}
